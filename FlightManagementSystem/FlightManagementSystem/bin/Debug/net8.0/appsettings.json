{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AppDbContext": "Data Source=localhost;Initial Catalog=flight-management;Integrated Security=SSPI;Encrypt=False"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "./logging/nlog-${shortdate}.log"
      }
    },
    "rules": {
      "0": {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    }
  },

}
